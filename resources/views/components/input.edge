<div class="form-group mt-2">
    <label for="{{name}}">{{label}}</label>
    <input type="{{type || "text"}}" name="{{name}}" id="{{name}}" class="{{cls || 'form-control'}}" {{required ? "required" : ""}}>
</div>

@inputError(name)
